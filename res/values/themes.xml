<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme that runs on startup -->
    <style name="Startup" parent="android:Theme">
        <item name="android:windowBackground">@drawable/bg_window_loading</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Light" parent="@style/Theme.HoloBootstrap.Dark">
        <item name="themeName">LIGHT</item>

        <!-- ANDROID -->
        <item name="android:windowBackground">@drawable/bg_light_opt</item>

        <!-- ACTIONBAR ACTIVITY -->
        <item name="bgActionBarActivityFrame">@null</item>

        <!-- ACTIONBAR -->
        <item name="actionBarBg">@drawable/bg_actionbar_light</item>
        <item name="actionBarUpIcon">@drawable/st_ic_action_up</item>
        <item name="actionBarTitleTextStyle">@style/FontText.ActionBar.Title</item>
        <!-- ACTIONBAR BUTTON -->
        <item name="actionBarButtonIconStyle">@style/IconView.ActionBar.Light</item>
        <item name="actionBarButtonBg">@drawable/btn_actionbar_light</item>
        <item name="actionBarOverflowIcon">@drawable/ic_action_overflow</item>
        <!-- ACTIONBAR OVERFLOW -->
        <item name="overflowMenuButtonIconStyle">@style/IconView.ActionBar.Overflow</item>
        <item name="overflowMenuButtonTextStyle">@style/FontText.ActionBar.Overflow.Light</item>
        <item name="overflowMenuButtonBg">@drawable/btn_bright_accent</item>
        <item name="overflowMenuBg">@drawable/bg_actionbar_overflow_light</item>
        <item name="btnActionBarTab">@drawable/btn_actionbar_tab_light</item>

        <!-- SLIDEOUT MENU -->
        <item name="slideoutBtnBg">@drawable/btn_slideout_light</item>
        <item name="slideoutHeaderBg">@drawable/bg_slideout_header_light</item>
        <item name="slideoutTextColor">@drawable/st_color_txt_slideout_light</item>

        <!-- TEXT -->
        <item name="textColorPrimary">@color/grey_15</item>
        <item name="textColorSecondary">@color/grey_30</item>
        <item name="textColorTertiary">@color/grey_40</item>
        <item name="textColorPrimaryDisableable">@drawable/st_color_txt_disableable_light</item>

        <!-- EDIT TEXT -->
        <item name="fontEditBackground">@drawable/edit_text_light</item>

        <!-- STORY -->
        <item name="btnStory">@drawable/btn_story_light</item>
        <item name="shdwStoryText">@color/white</item>
        <item name="bgStoryAndCommentControls">@color/grey_80</item>
        <item name="bgStorylistTablet">@drawable/bg_storylist_tablet_light</item>
        <item name="cacheColorHintStorylistTablet">@color/grey_98</item>

        <!-- COMMENT -->
        <item name="commentDepthColors">@array/comment_depth_colors_light</item>
        <item name="bgFoldedComment">@color/white</item>
        <item name="logoEmbossed">@drawable/logo_embossed_light</item>

        <!-- COMMENT HEADER -->
        <item name="commentsHeaderBg">@color/black_5_opac</item>
        <item name="commentsHeaderControlsBg">@color/grey_80</item>
        <item name="commentsHeaderDivider">@color/white</item>

        <!-- USER ACTIVITY -->
        <item name="bgTab">@drawable/btn_tab_light</item>

        <!-- SHARE -->
        <item name="btnSharePopup">@drawable/btn_share_popup_light</item>
        <item name="bgSharePopup">@drawable/bg_sharepopup_light</item>

        <!-- ABOUT -->
        <item name="bgAboutTextbox">@drawable/bg_textbox_about_light</item>
        <item name="logoAbout">@drawable/logo_about_black</item>

        <!-- MISC -->
        <item name="bgDefault">@drawable/bg_light_opt</item>
        <item name="bgDefaultColor">@color/cacheColorHintLight</item>
        <item name="dividerColor">@color/grey_80</item>
        <item name="btnOpac10">@drawable/btn_opac_10_light</item>
        <item name="colorOpac10">@color/black_10_opac</item>
        <item name="bgSpinner">@drawable/spinner_background_light</item>
        <item name="listCacheColorHint">@color/cacheColorHintLight</item>
        <item name="overflowMenuWidth">@dimen/overflow_menu_width</item>

        <item name="android:fastScrollThumbDrawable" tools:targetApi="honeycomb">@drawable/fastscroll_thumb_holo</item>
